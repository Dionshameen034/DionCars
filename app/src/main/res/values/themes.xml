<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DionCars" parent="android:Theme.Material.Light.NoActionBar" />


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/vintage</item>
        <item name="postSplashScreenTheme">@style/Theme.DionCars</item>

    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="ImageChange">
        <item name="android:src">@drawable/vintage</item>
    </style>
</resources>
